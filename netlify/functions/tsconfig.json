{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "module": "CommonJS",
    "target": "ES2020",
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
